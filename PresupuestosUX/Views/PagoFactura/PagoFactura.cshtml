@model PresupuestosUX.Models.FACTURA_PROVEEDOR

@using (Html.BeginForm("PagoFactura", "PagoFactura", FormMethod.Post))
{
    <hr />
    <nav class="navbar navbar-dark" style="background-color: #FAEEEE;">
        <a>Ingresar cantidad a pagar:</a>
        <input class="form-control" type="text" name="PagoFactura" />



        <div class="form-group">
            <div class="col-md-10">
                BANCO:
                @Html.DropDownList("ID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FECHA, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FECHA, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FECHA, "", new { @class = "text-danger" })
            </div>
        </div>

        <input type="submit" value="Ingresar pago" class="btn btn-danger" />
    </nav>

}

    <script>
    $(function () {
        $('#FECHA').datepicker({
            format: 'dd/mm/yyyy',
            firstDay: 1,
            autoclose: true,
            todayBtn: true,
            pickerPosition: "bottom-left",
            language: "es",
            weekStart: 1,
            todayHighlight: 1
        });
    });
    </script>